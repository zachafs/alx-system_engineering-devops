 #!/usr/bin/env bash
 # Transfers a file from our client to a server and tchec it :
if [ $# -lt 3 ]; then
    echo "Usage: ${0#./} PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
    exit 1
fi

 # assignements Variable:

LOCAL_FILE=$1
IP=$2
USERNAME=$3
PRIVATE_KEY=$4

 #strict host

if [ $# -eq 3 ]; then
    scp -o StrictHostKeyChecking=no "$LOCAL_FILE" "$USERNAME@$IP":~/
else
    scp -o StrictHostKeyChecking=no -i "$PRIVATE_KEY" "$LOCAL_FILE" "$USERNAME@$IP":~/
fi
