#!/usr/bin/env bash

# Transfers a file from our client to a server and checks it:

if [ $# -lt 4 ] 
then
    echo "Usage: $0 PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
    exit 1
fi

# Assign variables:
path_to_file="$1"
ip="$2"
username="$3"
path_to_ssh_key="$4"

# Disable strict host key checking for SCP:

scp -o "StrictHostKeyChecking=no" -i "$path_to_ssh_key" "$path_to_file" "$username@$ip:~/"

# Check the exit status of SCP (0 for success, non-zero for failure):

if [ $? -eq 0 ]
then
    echo "Transfer successful"
else
    echo "Transfer denied"
fi

